<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <springProperty name="APP_VERSION" source="app.version"/>
    <springProperty name="APP_NAME" source="spring.application.name"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <customFields>{"app":"user-service","version":"${APP_VERSION}"}</customFields>
            <providers>
                <timestamp/>
                <pattern>
                    <pattern>
                        {
                            "version":"${APP_VERSION}",
                            "app":"${APP_NAME}",
                            "x-correlation-id": "%X{X-Correlation-Id}",
                            "user-id": "%X{userId}",
                            "message": "%msg%throwable",
                            "level": "%level",
                            "thread": "%thread"
                        }
                    </pattern>
                </pattern>
            </providers>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>

